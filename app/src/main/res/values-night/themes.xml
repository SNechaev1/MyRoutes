<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyRoutes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/brand_prim</item>
        <item name="colorPrimaryVariant">@color/brand_prim</item>
        <item name="colorSecondary">@color/brand_sec</item>
        <item name="colorSecondaryVariant">@color/brand_sec</item>

        <item name="android:colorBackground">@color/brand_prim_bg</item>
        <item name="colorSurface">@color/brand_prim_bg</item>
        <item name="colorError">@color/red</item>

        <item name="colorOnPrimary">@color/reply_white_50</item>
        <item name="colorOnSecondary">@color/brand_prim_text</item>
        <item name="colorOnBackground">@color/brand_prim_text</item>
        <item name="colorOnSurface">@color/brand_prim_text</item>
